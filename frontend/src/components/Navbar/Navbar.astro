<style>
header{

    max-width: 100%;
}
.navbar {
    max-width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 10px 20px;
    background-color: #f8f8f8;
}

.logo img {
    height: 40px;
}

.search-bar {
    display: flex;
    /*flex: 1;*/
    width: 20%;
    margin: 0 10px;
}

.search-bar input {
    width: 100%;
    padding: 8px;
    border: 1px solid #ccc;
    border-radius: 5px 0 0 5px;
}

.search-bar button {
    padding: 8px;
    border: none;
    background-color: #4CAF50;
    color: white;
    border-radius: 0 5px 5px 0;
}

.contact, .login, .cart {
 margin:0px 10px;
}

.nav-links {
    display: flex;
    justify-content: space-around;
    background-color: #333;
    padding: 10px;
}

.nav-links a {
    color: white;
    padding: 10px;
    text-decoration: none;
}

.menu-toggle {
    display: none;
    font-size: 24px;
    cursor: pointer;
}

@media (max-width: 768px) {
    .search-bar, .contact, .login, .cart {
        display: none;
    }
    
    .menu-toggle {
        display: block;
    }
    
    .nav-links {
        display: none;
        flex-direction: column;
    }
    
    .nav-links a {
        padding: 15px;
        border-top: 1px solid #444;
    }
    
    .nav-links.active {
        display: flex;
    }
}
</style>